[% META
	title='Logga in på chatten'
	next_template = "/member/chat/cgiirc/irc.cgi"
	onsubmit = "setjs()"
	form_enctype = "application/x-www-form-urlencoded"
%]
<script language="JavaScript"><!--
function setjs() {
 if(navigator.product == 'Gecko') {
   document.f["interface"].value = 'mozilla';
 }else if(navigator.appName == 'Microsoft Internet Explorer' &&
    navigator.userAgent.indexOf("Mac_PowerPC") > 0) {
    document.f["interface"].value = 'konqueror';
 }else if(navigator.appName == 'Microsoft Internet Explorer') {
   document.f["interface"].value = 'ie';
 }else if(navigator.appName == 'Konqueror') {
    document.f["interface"].value = 'konqueror';
 }else if(window.opera) {
   document.f["interface"].value = 'opera';
 }

 // validate nick
 if(document.f.Nickname.value.length == 0)
 {
    alert("Välj ett unikt alias innan du börjar!");
    document.f.action='$me';
 }

}
//-->
</script>

